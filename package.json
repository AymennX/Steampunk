{
    "name": "project-aymenq",
    "private": true,
    "version": "0.1.0",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && electron-builder",
        "package": "tsc && vite build && electron-builder --win --linux",
        "preview": "vite preview"
    },
    "build": {
        "appId": "com.aymen.steampunknode",
        "productName": "Steampunk",
        "icon": "src/assets/logo.png",
        "asar": true,
        "directories": {
            "output": "release/${version}"
        },
        "files": [
            "dist",
            "dist-electron"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Video"
        }
    },
    "dependencies": {
        "@types/simple-peer": "^9.11.9",
        "@types/uuid": "^10.0.0",
        "framer-motion": "^12.34.2",
        "lucide-react": "^0.574.0",
        "qrcode.react": "^4.2.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-player": "^3.4.0",
        "simple-peer": "^9.11.1",
        "socket.io": "^4.8.3",
        "socket.io-client": "^4.8.3",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.2.0",
        "@types/node": "^25.2.3",
        "@types/react": "^18.3.28",
        "@types/react-dom": "^18.3.7",
        "@vitejs/plugin-react": "^4.0.0",
        "autoprefixer": "^10.4.24",
        "concurrently": "^8.2.0",
        "electron": "^25.0.0",
        "electron-builder": "^24.4.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.2.0",
        "typescript": "^5.0.0",
        "vite": "^4.4.0",
        "vite-plugin-electron": "^0.29.0",
        "vite-plugin-electron-renderer": "^0.14.6",
        "wait-on": "^7.0.1"
    }
}